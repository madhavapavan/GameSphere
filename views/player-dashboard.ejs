<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Player Dashboard</title>
    <style>
        body {
            background-image: url("https://wallpapercave.com/uwp/uwp4209554.jpeg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
    </style>
    <script src="https://cdn.tailwindcss.com"></script> <!-- Tailwind CSS CDN -->
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <!-- Container -->
    <div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-lg mt-10">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Available Games</h1>

        <!-- Logout Button -->
        <div class="text-right mb-6">
            <a href="/logout" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition duration-300 ease-in-out">Logout</a>
        </div>
        
        <!-- Game List -->
        <ul class="space-y-6">
            <% games.forEach(game => { %>
                <li class="p-6 bg-gray-50 rounded-lg shadow-md">
                    <h2 class="text-2xl font-semibold text-gray-800 mb-4"><%= game.title %></h2>
                    <p class="text-gray-600 mb-4"><%= game.description %></p>
                    <p class="text-gray-500 mb-4">Date: <%= game.date %></p>
                    <p class="text-gray-500 mb-4">Players Enrolled: <%= game.enrolled_count %> / <%= game.player_limit %></p>

                    <% if (game.enrolled_count < game.player_limit) { %>
                        <form action="/games/<%= game.id %>/enroll" method="POST" class="mt-4">
                            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition duration-300 ease-in-out">Enroll</button>
                        </form>
                    <% } else { %>
                        <p class="text-red-500 mt-4">Game Full</p>
                    <% } %>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
