<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        body {
            background-image: url('https://wallpapercave.com/uwp/uwp4424678.jpeg');
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
    <script src="https://cdn.tailwindcss.com"></script> <!-- Tailwind CSS CDN -->
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <!-- Container -->
    <div class="max-w-7xl mx-auto p-6">
        <!-- Logout Button -->
        <div class="text-right mb-4">
            <a href="/logout" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition duration-300 ease-in-out">Logout</a>
        </div>

        <h1 class="text-4xl font-bold text-cyan-500 mb-6">Admin Dashboard</h1>
        
        <h2 class="text-2xl font-semibold text-cyan-600 mb-4">Created Games</h2>
        
        <!-- Table -->
        <div class="overflow-x-auto bg-white rounded-lg shadow-md">
            <table class="min-w-full table-auto">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="py-3 px-6 text-left text-gray-700">Title</th>
                        <th class="py-3 px-6 text-left text-gray-700">Description</th>
                        <th class="py-3 px-6 text-left text-gray-700">Date</th>
                        <th class="py-3 px-6 text-left text-gray-700">Player Limit</th>
                        <th class="py-3 px-6 text-left text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% games.forEach(game => { %>
                        <tr class="border-t hover:bg-gray-50">
                            <td class="py-3 px-6 text-gray-800"><%= game.title %></td>
                            <td class="py-3 px-6 text-gray-600"><%= game.description %></td>
                            <td class="py-3 px-6 text-gray-600"><%= game.date %></td>
                            <td class="py-3 px-6 text-gray-600"><%= game.player_limit %></td>
                            <td class="py-3 px-6">
                                <a href="/games/<%= game.id %>/edit" class="text-blue-500 hover:text-blue-700">Edit</a>
                                <form action="/games/<%= game.id %>/delete" method="POST" style="display:inline;">
                                    <button type="submit" class="text-red-500 hover:text-red-700 ml-4">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Create New Game Button -->
        <div class="mt-6">
            <a href="/games/create" class="bg-green-500 text-white px-6 py-3 rounded-lg hover:bg-green-600 transition duration-300 ease-in-out">Create New Game</a>
        </div>
    </div>
</body>
</html>
